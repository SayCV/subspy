{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Test srt2ass",
            "type": "python",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "srt2ass",
                "--in-dir", "subs",
                "--mode", "srt2ass",
                "--ass-style", "1",
                "--ass-style-mode", "builtin",
            ]
        },
        {
            "name": "Python: Test ass2srt",
            "type": "python",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "srt2ass",
                "--in-dir", "subs",
                "--mode", "ass2srt",
            ]
        },
        {
            "name": "Python: Test chs2cht",
            "type": "python",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "chs2cht",
                "--in-dir", "subs",
                "--input", "*.chs+eng.srt",
                "--mode", "chs2cht",
            ]
        },
        {
            "name": "Python: Test trans",
            "type": "python",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "trans",
                "--in-dir", "data",
                "--input", "*.eng.srt",
                "--output", "*.chs.srt",
                "--trans-engine", "youdao",
                "--both",
            ]
        },
        {
            "name": "Python: Test rename",
            "type": "python",
            "request": "launch",
            "program": "test.py",
            "console": "integratedTerminal",
            "args": [
                "rename",
                //"--in-dir", "data",
                "--debug",
            ]
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "enter-your-module-name-here",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}